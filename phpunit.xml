<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="tmp/framework/tests/bootstrap.php">
    <testsuites>
        <testsuite name="Internal Application Test Suite">
            <directory>tmp/framework/tests/backend/phpunit/</directory>
            <directory>tmp/framework/tests/backend/phpunit/modules/</directory>
            <directory>tmp/framework/tests/backend/phpunit/modules/view/</directory>
            <directory>tmp/framework/tests/backend/phpunit/modules/encryptor/</directory>
            <directory>tmp/framework/tests/backend/phpunit/resources/helpers/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>resources/helpers/</directory>
            <directory>system/</directory>
            <directory>system/modules</directory>
            <exclude>system/kernel/</exclude>
        </whitelist>
    </filter>
</phpunit>
